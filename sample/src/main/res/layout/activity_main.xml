<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ivianuu.rxshortcuts.sample.MainActivity">

    <Button
        android:id="@+id/request_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request shortcut"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/shortcut_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/shortcut_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/execute_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute shortcut"/>

</LinearLayout>
